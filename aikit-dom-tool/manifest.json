{
  "manifest_version": 2,
  "name": "AIKit DOM Tool",
  "version": "0.0.1",
  "description": "Provides DOM manipulation tools for AIKit Orchestrator",
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "aikit-dom-tool@bnode.dev",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["websiteContent", "websiteActivity"],
        "optional": []
      }
    }
  }
}
